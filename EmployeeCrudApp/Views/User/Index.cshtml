@model IEnumerable<EmployeeCrudApp.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4 text-dark">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0 fw-bold">User Management</h1>
            <p class="text-muted small mb-0">Manage system access and account statuses</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-person-plus-fill me-2"></i>Add User
            </a>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a>
        </div>
    </div>

    <div class="card glass-card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-primary bg-opacity-10">
                    <tr>
                        <th class="ps-4">User Details</th>
                        <th>Email Address</th>
                        <th>Account Status</th>
                        <th class="pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-primary bg-opacity-25 text-primary fw-bold">
                                        @user.Name.Substring(0, Math.Min(1, user.Name.Length)).ToUpper()
                                    </div>
                                    <div class="fw-bold">@user.Name</div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsEmailVerified)
                                {
                                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2">
                                        <i class="bi bi-patch-check-fill me-1"></i> Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3 py-2">
                                        <i class="bi bi-clock-history me-1"></i> Pending
                                    </span>
                                }
                            </td>
                            <td class="pe-4 text-end">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info rounded-start-pill px-3" title="Details">
                                        <i class="bi bi-eye-fill me-1"></i> View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-dark px-3" title="Edit">
                                        <i class="bi bi-pencil-fill me-1"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger rounded-end-pill px-3" title="Delete">
                                        <i class="bi bi-trash-fill me-1"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted fst-italic">
                                <i class="bi bi-people fs-1 d-block mb-2"></i>
                                No users found in the system.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table { color: inherit; }
    .table-hover tbody tr:hover { background-color: rgba(0, 0, 0, 0.05); }
    th { color: #666; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; }
    td { vertical-align: middle; border-bottom: 1px solid rgba(0, 0, 0, 0.05); }
</style>
