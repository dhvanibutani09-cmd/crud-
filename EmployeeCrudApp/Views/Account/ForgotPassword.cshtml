@model EmployeeCrudApp.Models.ForgotPasswordViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Forgot Password"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card shadow-sm" style="width: 100%; max-width: 400px; margin: auto; margin-top: 50px;">
    <div class="card-body">
        <h2 class="text-center mb-4">@Localizer["Forgot Password"]</h2>
        <p class="text-muted text-center mb-4">@Localizer["Enter your email address and we'll send you a link to reset your password."]</p>
        <section>
            <form asp-action="ForgotPassword" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">@Localizer["Email Address"]</label>
                    <input asp-for="Email" class="form-control" placeholder="@Localizer["Enter Email"]" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-block">@Localizer["Send Link"]</button>
                    <a asp-action="Login" class="btn btn-link text-center mt-2">@Localizer["Back to Login"]</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
