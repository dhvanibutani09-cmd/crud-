@model EmployeeCrudApp.Models.User

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Add New User"];
}

<div class="row justify-content-center mt-5 text-dark">
    <div class="col-md-6">
        <div class="card glass-card border-0 shadow-lg rounded-4 p-4">
            <div class="text-center mb-4">
                <div class="icon-circle bg-primary bg-opacity-25 text-primary mx-auto mb-3">
                    <i class="bi bi-person-plus-fill fs-3"></i>
                </div>
                <h2 class="fw-bold">@Localizer["Add New User"]</h2>
                <p class="text-muted small">@Localizer["Create a new account for system access"]</p>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Full Name"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-person"></i></span>
                        <input asp-for="Name" class="form-control bg-transparent text-dark border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["Enter full name"]" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Email Address"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control bg-transparent text-dark border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["name@example.com"]" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Password"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control bg-transparent text-dark border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["Create a password"]" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label small text-muted text-uppercase fw-bold ls-1">@Localizer["Confirm Password"]</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent text-dark border-start-0 ps-2 text-start fw-bold" placeholder="@Localizer["Confirm your password"]" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>


                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill py-2 shadow-sm fw-bold">@Localizer["Create User"]</button>
                    <a asp-action="Index" class="btn btn-outline-light rounded-pill py-2">@Localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .form-control::placeholder { color: rgba(0, 0, 0, 0.5); }
    .form-control { color: black !important; }
    .form-control:focus { 
        background-color: rgba(255, 255, 255, 0.2); 
        color: black !important; 
        box-shadow: none; 
        border-color: var(--bs-primary); 
    }
    .ls-1 { letter-spacing: 1px; }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
