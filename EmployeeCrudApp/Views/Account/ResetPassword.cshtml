@model EmployeeCrudApp.Models.ResetPasswordViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Reset Password"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card shadow-sm" style="width: 100%; max-width: 400px; margin: auto; margin-top: 50px;">
    <div class="card-body">
        <h2 class="text-center mb-4">@Localizer["Reset Password"]</h2>
        <section>
            <form asp-action="ResetPassword" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Otp" />

                <div class="form-group mb-3">
                    <label asp-for="NewPassword" class="control-label">@Localizer["New Password"]</label>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="@Localizer["New Password"]" autocomplete="off" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label">@Localizer["Confirm New Password"]</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="@Localizer["Confirm New Password"]" autocomplete="off" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group d-grid mb-3">
                    <button type="submit" class="btn btn-success btn-block">@Localizer["Reset Password"]</button>
                    <a asp-action="Login" class="btn btn-link text-center mt-2">@Localizer["Back to Login"]</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
