@model EmployeeCrudApp.Models.VerifyOtpViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Verify OTP"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card shadow-sm" style="width: 100%; max-width: 400px; margin: auto; margin-top: 50px;">
    <div class="card-body">
        <h2 class="text-center mb-4">@Localizer["Verify OTP"]</h2>
        <div class="text-center mb-4">
            <div class="small text-muted">@Localizer["Signing up as:"]</div>
            <div class="fw-bold fs-5">@ViewBag.Name</div>
            <div class="small text-primary">@Model.Email</div>
        </div>
        <p class="text-center text-muted small">@Localizer["Please enter the 6-digit code sent to your email."]</p>
        <div class="alert alert-info py-2" style="font-size: 0.8rem;">
            @Localizer["Check your email (or <code>email_log.txt</code> if SMTP is not configured) for the code."]
        </div>
        <section>
            <form asp-action="VerifyOtp" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Email" />
                
                <div class="form-group mb-3">
                    <label asp-for="Otp" class="control-label">@Localizer["OTP Code"]</label>
                    <input asp-for="Otp" class="form-control" placeholder="@Localizer["Enter 6-digit OTP"]" autocomplete="off" maxlength="6" />
                    <span asp-validation-for="Otp" class="text-danger"></span>
                </div>
                
                <div class="form-group d-grid">
                    <button type="submit" class="btn btn-primary btn-block">@Localizer["Verify & Login"]</button>
                    <a asp-action="Login" class="btn btn-link text-center mt-2">@Localizer["Back to Login"]</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

