@model EmployeeCrudApp.Models.Location
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Add Location"];
}

<div class="row justify-content-center mt-5 text-dark">
    <div class="col-md-6">
        <div class="card glass-card border-0 shadow-lg rounded-4 p-4">
            <div class="text-center mb-4">
                <div class="icon-circle bg-primary bg-opacity-25 text-primary mx-auto mb-3" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-geo-alt-fill fs-3"></i>
                </div>
                <h2 class="fw-bold">@Localizer["Add Location"]</h2>
                <p class="text-muted small">@Localizer["Add a new city or village for targeted news"]</p>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label small text-muted text-uppercase fw-bold">@Localizer["Name"]</label>
                    <input asp-for="Name" class="form-control rounded-pill border-0 bg-light px-3" placeholder="@Localizer["Enter city or village name"]" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label small text-muted text-uppercase fw-bold">@Localizer["Type"]</label>
                    <select asp-for="Type" class="form-select rounded-pill border-0 bg-light px-3">
                        <option value="City">@Localizer["City"]</option>
                        <option value="Village">@Localizer["Village"]</option>
                        <option value="Country">@Localizer["Country"]</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CountryCode" class="form-label small text-muted text-uppercase fw-bold">@Localizer["Country Code"]</label>
                    <input asp-for="CountryCode" class="form-control rounded-pill border-0 bg-light px-3" placeholder="@Localizer["e.g. IN, US (Optional)"]" />
                    <span asp-validation-for="CountryCode" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill py-2 shadow-sm fw-bold">@Localizer["Save Location"]</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill py-2">@Localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</div>
