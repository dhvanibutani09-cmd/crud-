@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["City News India"];
}

<style>
    header { display: none !important; }
</style>

<div class="container-fluid py-4 bg-light min-vh-100">
    <div class="container">
        <!-- Header Section -->
        <div class="row mb-5">
            <div class="col-lg-10 mx-auto">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-dark rounded-pill px-4 shadow-sm hover-elevate">
                        <i class="bi bi-arrow-left me-2"></i> @Localizer["Back to Dashboard"]
                    </a>
                    <div class="d-flex align-items-center gap-3">
                         <i class="bi bi-clock-history text-muted"></i>
                         <span id="current-time-header" class="text-muted small fw-bold"></span>
                    </div>
                </div>

                <div class="text-center">
                    <h1 class="display-4 fw-bold mb-3 text-dark">
                        <span class="text-primary"><i class="bi bi-newspaper"></i></span> <span id="news-page-title">@Localizer["India City News"]</span>
                    </h1>
                    <p class="lead text-muted mb-4">@Localizer["Get real-time updates from trusted Indian sources for your city."]</p>
                    
                    <!-- Search Box -->
                    <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden border">
                    <span class="input-group-text bg-white border-0 ps-4"><i class="bi bi-search text-primary"></i></span>
                    <input type="text" id="citySearchInput" class="form-control border-0 py-3 ps-2" placeholder="@Localizer["Enter any city or country name..."]" aria-label="Search City">
                    <button class="btn btn-primary px-5 fw-bold" type="button" id="searchBtn">@Localizer["Search"]</button>
                </div>
            </div>
        </div>

        <!-- Quick Select Cities Removed -->

        <!-- Content Area -->
        <div class="row">
            <div class="col-12">
                <div id="status-container" class="mb-4 text-center">
                    <span id="last-updated" class="badge bg-soft-info text-info rounded-pill px-3 py-2 d-none">
                        <i class="bi bi-clock-history me-1"></i> @Localizer["Updating in"] <span id="timer-countdown">300</span>s
                    </span>
                </div>

                <div id="news-container" class="row g-4">
                    <div class="col-12 text-center py-5">
                        <div class="card border-0 bg-transparent">
                            <i class="bi bi-geo-alt display-1 text-primary mb-3"></i>
                            <h3>@Localizer["Select or search for a city to see the latest news."]</h3>
                        </div>
                    </div>
                </div>

                <!-- Loader -->
                <div id="news-loader" class="d-none text-center py-5">
                    <div class="spinner-grow text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">@Localizer["Loading..."]</span>
                    </div>
                    <p class="mt-3 text-muted fw-bold">@Localizer["Fetching live news for you..."]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --bs-primary: #0d6efd;
        --bs-primary-rgb: 13, 110, 253;
    }

    .bg-soft-info {
        background-color: rgba(13, 202, 240, 0.1);
    }

    .news-card {
        border: none;
        border-radius: 1.25rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.3s cubic-bezier(.25, .8, .25, 1);
        height: 100%;
        display: flex;
        flex-column: column;
        overflow: hidden;
        background: #fff;
    }

    .news-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.12);
    }

    .news-card-img-wrapper {
        position: relative;
        height: 220px;
        overflow: hidden;
    }

    .news-card-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .news-card:hover .news-card-img {
        transform: scale(1.05);
    }

    .news-source-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.75rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 2;
    }

    .news-card-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .news-title {
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1.4;
        margin-bottom: 0.75rem;
        color: #212529;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .news-description {
        font-size: 0.95rem;
        color: #6c757d;
        margin-bottom: 1.25rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .news-meta {
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid #f8f9fa;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
    }

    .quick-city-btn {
        transition: all 0.2s ease;
        border-width: 2px;
        font-weight: 500;
    }

    .quick-city-btn:hover, .quick-city-btn.active {
        background-color: var(--bs-primary);
        color: white;
        transform: scale(1.05);
    }

    #citySearchInput:focus {
        box-shadow: none;
    }

    /* Animation */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .news-item-animate {
        animation: fadeInUp 0.5s ease forwards;
    }
</style>

@section Scripts {
    <script>
        let currentCity = "";
        let currentCountry = "";
        let refreshInterval = 60; // 1 minute
        let countdown = refreshInterval;
        let timerId = null;

        const newsContainer = document.getElementById('news-container');
        const loader = document.getElementById('news-loader');
        const searchInput = document.getElementById('citySearchInput');
        const searchBtn = document.getElementById('searchBtn');
        const lastUpdatedText = document.getElementById('last-updated');
        const timerDigit = document.getElementById('timer-countdown');

        // Extract params from URL on load
        function getUrlParams() {
            const params = new URLSearchParams(window.location.search);
            return {
                city: params.get('city') || "",
                country: params.get('country') || ""
            };
        }

        async function fetchCityNews(city, country = "") {
            if (!city && !country) return;
            
            currentCity = city;
            currentCountry = country;
            newsContainer.innerHTML = "";
            loader.classList.remove('d-none');
            lastUpdatedText.classList.add('d-none');
            stopTimer();

            try {
                let url = `/News/GetCityNews?city=${encodeURIComponent(city)}&country=${encodeURIComponent(country)}`;
                const response = await fetch(url);
                const data = await response.json();

                loader.classList.add('d-none');

                if (data.status === 'ok' && data.articles) {
                    if (data.articles.length === 0) {
                        newsContainer.innerHTML = `
                            <div class="col-12 text-center py-5">
                                <div class="card border-0 bg-transparent">
                                    <i class="bi bi-search display-1 text-muted mb-3"></i>
                                    <h3>@Localizer["No recent news found for"] "${city || country}"</h3>
                                    <p class="text-muted">@Localizer["Try searching for a different city/country or check spelling."]</p>
                                </div>
                            </div>`;
                        return;
                    }

                    renderNews(data.articles, city || country);
                    startTimer();
                    lastUpdatedText.classList.remove('d-none');
                    
                    // Update Page Title
                    document.getElementById('news-page-title').innerText = `@Localizer["News for"] ${city || country}`;

                    // Update search input to reflect current search
                    if (city) searchInput.value = city;
                } else {
                    newsContainer.innerHTML = `<div class="col-12 alert alert-danger">@Localizer["Error fetching news:"] ${data.message}</div>`;
                }
            } catch (error) {
                console.error('Fetch error:', error);
                loader.classList.add('d-none');
                newsContainer.innerHTML = `<div class="col-12 alert alert-danger">@Localizer["An unexpected error occurred."]</div>`;
            }
        }

        function renderNews(articles, locationName) {
            let html = "";
            articles.forEach((article, index) => {
                const imgUrl = article.urlToImage || 'https://images.unsplash.com/photo-1585829365234-78d9bce44b82?q=80&w=800&auto=format&fit=crop';
                const publishedDate = new Date(article.publishedAt);
                const culture = window.APP_CULTURE || 'en-US';
                const timeString = publishedDate.toLocaleString(culture, { 
                    month: 'short', 
                    day: 'numeric', 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });

                html += `
                    <div class="col-md-6 col-lg-4 news-item-animate" style="animation-delay: ${index * 0.1}s">
                        <div class="news-card">
                            <div class="news-card-img-wrapper">
                                <span class="news-source-badge bg-primary text-white">${article.source.name}</span>
                                <img src="${imgUrl}" class="news-card-img" alt="News Image" onerror="this.src='https://images.unsplash.com/photo-1585829365234-78d9bce44b82?q=80&w=800&auto=format&fit=crop'">
                            </div>
                            <div class="news-card-body">
                                <div class="mb-2">
                                    <span class="badge bg-soft-info text-info rounded-pill px-2 py-1"><i class="bi bi-geo-alt"></i> ${locationName}</span>
                                    <span class="badge bg-light text-muted rounded-pill px-2 py-1 ms-1"><i class="bi bi-lightning-fill text-warning"></i> @Localizer["Live"]</span>
                                </div>
                                <h5 class="news-title">${article.title}</h5>
                                <p class="news-description">${article.description || '@Localizer["Click read more to view full details of this news story from"] ' + article.source.name}</p>
                                <div class="news-meta">
                                    <div class="d-flex flex-column">
                                        <span class="text-muted smaller"><i class="bi bi-calendar3 me-1"></i> ${timeString}</span>
                                    </div>
                                    <a href="${article.url}" target="_blank" class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm">@Localizer["Read More"]</a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            newsContainer.innerHTML = html;
        }

        function startTimer() {
            countdown = refreshInterval;
            timerDigit.innerText = countdown;
            if (timerId) clearInterval(timerId);
            timerId = setInterval(() => {
                countdown--;
                timerDigit.innerText = countdown;
                if (countdown <= 0) {
                    fetchCityNews(currentCity, currentCountry);
                }
            }, 1000);
        }

        function stopTimer() {
            if (timerId) clearInterval(timerId);
        }

        // Search Events
        searchBtn.addEventListener('click', () => {
            const query = searchInput.value.trim();
            if (query) fetchCityNews(query, ""); // Free search, no default country
        });

        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const query = searchInput.value.trim();
                if (query) fetchCityNews(query, "");
            }
        });

        // Quick City Events Removed

        document.addEventListener('DOMContentLoaded', () => {
            const params = getUrlParams();
            if (params.city || params.country) {
                fetchCityNews(params.city, params.country);
            }
            
            // Current Time in Header
            setInterval(() => {
                const now = new Date();
                const culture = window.APP_CULTURE || 'en-US';
                document.getElementById('current-time-header').innerText = now.toLocaleTimeString(culture);
            }, 1000);
        });
    </script>
}
