@model EmployeeCrudApp.Models.SignupViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Sign Up"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card shadow-sm" style="width: 100%; max-width: 400px; margin: auto; margin-top: 50px;">
    <div class="card-body">
        <h2 class="text-center mb-4">@Localizer["Sign Up"]</h2>
        <section>
            <form asp-action="Signup" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
                    <input asp-for="Name" class="form-control" placeholder="@Localizer["Enter Name"]" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">@Localizer["Email"]</label>
                    <input asp-for="Email" class="form-control" placeholder="@Localizer["Enter Email"]" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="@Localizer["Enter Password"]" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label">@Localizer["Confirm Password"]</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="@Localizer["Confirm Password"]" autocomplete="off" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="form-group d-grid mb-3">
                    <button type="submit" class="btn btn-success btn-block">@Localizer["Sign Up"]</button>
                    <a asp-action="Login" class="btn btn-link text-center mt-2">@Localizer["Already have an account? Login"]</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
